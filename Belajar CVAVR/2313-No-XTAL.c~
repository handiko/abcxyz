#include <tiny2313.h>
#include <delay.h>

#define LED             PORTD.6
#define DIT             PIND.5
#define DAH             PIND.4

#define SPEED           120

// Declare your global variables here

void main(void)
{
        char i;
        
#pragma optsize-
        CLKPR=0x80;
        CLKPR=0x00;
#ifdef _OPTIMIZE_SIZE_
#pragma optsize+
#endif

        PORTD=0x3F;
        DDRD=0x40;

        ACSR=0x80;  
        
        for(i=0;i<3;i++)
        {
                LED=1;
                delay_ms(200);
                LED=0;
                delay_ms(200);
        }

        while (1)
        {
                if(!DIT)
                {
                        LED=1;
                        delay_ms((int)SPEED);      
                }
                if(!DAH)
                {
                        LED=1;
                        delay_ms((int)2.75*SPEED);
                }    
                
                LED=0;
                delay_ms((int)SPEED); 
        }
}
